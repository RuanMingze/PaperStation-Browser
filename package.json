{
  "name": "paperstation-browser",
  "version": "1.1.6",
  "description": "访问互联网",
  "main": "main.js",
  "scripts": {
    "start": "node start.js",
    "start-no-slc": "cross-env SINGLE_INSTANCE_LOCK=false node start.js",
    "dev": "cross-env NODE_ENV=development node start.js",
    "build": "electron-builder --win --x64",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "electron-builder --win --x64 --publish never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.paperstation.browser",
    "productName": "PaperStation",
    "copyright": "Copyright © 2026 Ruanm",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!intro/**/*",
      "!intro",
      "!intro/.github/**/*",
      "!intro/app/**/*",
      "!intro/components/**/*",
      "!intro/hooks/**/*",
      "!intro/lib/**/*",
      "!intro/locales/**/*",
      "!intro/public/**/*",
      "!intro/styles/**/*",
      "!intro/.gitignore",
      "!intro/.hintrc",
      "!intro/IMAGE_GENERATION_README.md",
      "!intro/README.md",
      "!intro/components.json",
      "!intro/middleware.ts",
      "!intro/next-env.d.ts",
      "!intro/next.config.mjs",
      "!intro/package.json",
      "!intro/pnpm-lock.yaml",
      "!intro/postcss.config.mjs",
      "!intro/tailwind.config.ts",
      "!intro/tsconfig.json",
      "!intro/tsconfig.tsbuildinfo",
      "!intro/turbopack-build-error.log",
      "!*-builder.zip"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-2.png",
      "artifactName": "${productName}_Win64_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PaperStation"
    },
    "asar": true,
    "compression": "maximum"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium",
    "paperstation"
  ],
  "author": "RuanMingze",
  "license": "MIT",
  "dependencies": {
    "electron-context-menu": "^4.1.1",
    "electron-notifications": "1.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^25.1.8",
    "figlet": "1.7.0"
  }
}