{
  "name": "flowmora-browser",
  "version": "1.0.0",
  "description": "A secure Chromium-based desktop browser built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "dist": "electron-builder --win --x64 --publish never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.flowmora.browser",
    "productName": "Flowmora Browser",
    "copyright": "Copyright Â© 2024 Piyush Yadav",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.git",
      "!*.md",
      "!LICENSE",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName} Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Flowmora Browser"
    },
    "asar": true,
    "compression": "maximum"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium",
    "flowmora"
  ],
  "author": "Piyush Yadav <piyushrajyadav@github.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/piyushrajyadav/flowmora-browser.git"
  },
  "homepage": "https://github.com/piyushrajyadav/flowmora-browser#readme",
  "bugs": {
    "url": "https://github.com/piyushrajyadav/flowmora-browser/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  }
}